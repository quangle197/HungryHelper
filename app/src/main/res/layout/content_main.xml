<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.quangle.hungryhelper.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


        <LinearLayout
            android:id="@+id/main_restaurantPlaque"
            android:layout_width="match_parent"
            android:layout_height="410dp"
            android:background="@android:drawable/alert_light_frame"
            android:orientation="vertical">

            <TextView
                android:id="@+id/main_restaurantDescriptionTxt"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_alignTop="@+id/profilePlaque"
                android:layout_centerHorizontal="true"
                android:text="McDonald's"
                android:textAlignment="center"
                android:textSize="18sp"
                android:visibility="visible"
                tools:layout_editor_absoluteX="21dp"
                tools:layout_editor_absoluteY="92dp" />

            <ImageButton
                android:id="@+id/main_profileBtn"
                android:layout_width="match_parent"
                android:layout_height="253dp"
                android:layout_below="@+id/main_restaurantDescriptionTxt"
                android:layout_centerHorizontal="true"
                android:onClick="gotoProfile"
                android:scaleType="fitXY"
                android:visibility="visible"
                app:srcCompat="@drawable/mcdonalds"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="114dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/main_star1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    app:srcCompat="@android:drawable/btn_star"
                    tools:layout_editor_absoluteX="31dp"
                    tools:layout_editor_absoluteY="371dp" />

                <ImageView
                    android:id="@+id/main_star2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/main_star1"
                    android:visibility="visible"
                    app:srcCompat="@android:drawable/btn_star"
                    tools:layout_editor_absoluteX="63dp"
                    tools:layout_editor_absoluteY="371dp" />

                <ImageView
                    android:id="@+id/main_star3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/main_star2"
                    android:visibility="visible"
                    app:srcCompat="@android:drawable/btn_star"
                    tools:layout_editor_absoluteX="94dp"
                    tools:layout_editor_absoluteY="371dp" />

                <ImageView
                    android:id="@+id/main_star4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/main_star3"
                    android:visibility="visible"
                    app:srcCompat="@android:drawable/btn_star"
                    tools:layout_editor_absoluteX="126dp"
                    tools:layout_editor_absoluteY="371dp" />

                <ImageView
                    android:id="@+id/main_star5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/main_star4"
                    android:visibility="visible"
                    app:srcCompat="@android:drawable/btn_star"
                    tools:layout_editor_absoluteX="158dp"
                    tools:layout_editor_absoluteY="371dp" />

                <TextView
                    android:id="@+id/content_miles"
                    android:layout_width="50dp"
                    android:layout_height="22dp"
                    android:layout_alignParentRight="true"
                    android:text="miles"
                    android:textSize="18sp"
                    android:visibility="visible"
                    tools:layout_editor_absoluteX="100dp"
                    tools:layout_editor_absoluteY="92dp" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/main_leftBtn"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@android:color/transparent"
                android:contentDescription="TODO"
                android:scaleType="fitCenter"
                android:visibility="visible"
                app:srcCompat="@drawable/thumbsdown"
                tools:layout_editor_absoluteX="63dp"
                tools:layout_editor_absoluteY="457dp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/main_donebutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Done" />
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/main_rightBtn"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:visibility="visible"
                app:srcCompat="@drawable/thumbsup"
                tools:layout_editor_absoluteX="260dp"
                tools:layout_editor_absoluteY="457dp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>
