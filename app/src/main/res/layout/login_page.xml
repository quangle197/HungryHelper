<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/loginLogo"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:scaleX=".7"
        android:scaleY=".7"
        app:srcCompat="@drawable/applogo"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="144dp"/>
    <EditText
        android:id="@+id/loginPage_Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/user_logo"
        android:layout_below="@+id/loginLogo"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:textColorLink="@color/colorPrimary" />


    <EditText
        android:id="@+id/loginPage_Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/loginPage_Username"
        android:drawableLeft="@drawable/user_password"
        android:hint="Password"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/loginPage_ForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/loginPage_Password"
        android:layout_below="@+id/loginPage_Password"
        android:onClick="gotoForgot"
        android:text="Forgot Password?" />

    <Button
        android:id="@+id/loginPage_Button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginPage_ForgotPassword"
        android:background="@color/colorAccent"
        android:layout_centerHorizontal="true"
        android:text="Login" />


