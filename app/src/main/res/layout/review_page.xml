<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/reviewPage_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textSize="24dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="Restaurant" />

    <EditText
        android:id="@+id/reviewPage_TextEdit"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/reviewPage_Title"
        android:layout_marginTop="45dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:textSize="12dp"
        android:hint="Enter your review here"
        />

    <ImageButton
        android:id="@+id/reviewPage_Exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/reviewPage_TextEdit"
        android:layout_alignTop="@+id/reviewPage_Title"
        android:onClick="goBack"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/close_button" />

    <Button
        android:id="@+id/reviewPage_Post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/reviewPage_TextEdit"
        android:layout_below="@+id/reviewPage_TextEdit"
        android:onClick="postReview"
        android:background="@android:color/transparent"
        android:text="Post" />


</RelativeLayout>